<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="WisperPluginProject.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="WisperPluginProject.commands.category"
            id="WisperPluginProject.commands.sampleCommand"
            name="Sample Command！！">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="wisperpluginproject.handlers.SampleHandler"
            commandId="WisperPluginProject.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="WisperPluginProject.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="WisperPluginProject.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="WisperPluginProject.commands.sampleCommand"
                  id="WisperPluginProject.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="WisperPluginProject.toolbars.sampleToolbar">
            <command
                  commandId="WisperPluginProject.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="WisperPluginProject.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="wisperpluginproject.editors.WisperEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="wis"
            icon="icons/sample.gif"
            id="wisperpluginproject.editors.WisperEditor"
            name="Sample Wisper Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="wisperpluginproject.views.wisperview.WisperViewPart"
            icon="icons/WisperViewIcon.png"
            id="WisperPluginProject.wisperView"
            name="WisperView"
            restorable="true">
      </view>
   </extension>

</plugin>
